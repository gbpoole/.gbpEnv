# Set-up/use master connection to g2
Host gstar_pf
    HostName g2.hpc.swin.edu.au
    LocalForward localhost:4321 sstar001:22 
    LocalForward localhost:4322 sstar002:22 
    ControlPath ~/.ssh/master-%r@%h:%p
    ControlMaster auto
    User gpoole
Host sstar001_pf
    HostName localhost
    User gpoole
    Port 4321
Host sstar002_pf
    HostName localhost
    User gpoole
    Port 4322

