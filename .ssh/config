# Master connection to g2
Host gstar
    HostName g2.hpc.swin.edu.au
    LocalForward localhost:4321 sstar001:22 
    LocalForward localhost:4322 sstar002:22 
    ControlPath ~/.ssh/master-%r@%h:%p
    ControlMaster auto
    User gpoole

# Use g2 tunnel to sstar001
Host sstar001
    HostName sstar001.hpc.swin.edu.au
    User gpoole
    Port 4321

# Use g2 tunnel to sstar002
Host sstar002
    HostName sstar002.hpc.swin.edu.au
    User gpoole
    Port 4322

